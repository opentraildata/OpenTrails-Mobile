<?xml version='1.0' encoding='utf-8'?>
<widget id="com.trailheadlabs.opentrails" version="0.2.3" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">

  <preference name="phonegap-version" value="3.6.3" />
  <preference name="orientation" value="portrait" />
  <name>OpenTrails</name>

  <description>
    A trail navigation application built on the OpenTrails data standard.
  </description>

  <icon src="icon.png" />

  <icon src="res/icons/icon-60.png" gap:platform="ios" width="60" height="60" />
  <icon src="res/icons/icon-60@2x.png" gap:platform="ios" width="120" height="120" />

  <icon src="res/icons/icon-76.png" gap:platform="ios" width="76" height="76" />
  <icon src="res/icons/icon-76@2x.png" gap:platform="ios" width="152" height="152" />

  <icon src="res/icons/icon-small.png" gap:platform="ios" width="29" height="29" />
  <icon src="res/icons/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

  <icon src="res/icons/icon-40.png" gap:platform="ios" width="40" height="40" />
  <icon src="res/icons/icon-40@2x.png" gap:platform="ios" width="80" height="80" />

  <icon src="res/icons/icon.png" gap:platform="ios" width="57" height="57" />
  <icon src="res/icons/icon@2x.png" gap:platform="ios" width="114" height="114" />

  <icon src="res/icons/icon-72.png" gap:platform="ios" width="72" height="72" />
  <icon src="res/icons/icon-72@2x.png" gap:platform="ios" width="144" height="144" />

  <icon src="res/icons/icon-small.png" gap:platform="ios" width="29" height="29" />
  <icon src="res/icons/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

  <icon src="res/icons/icon-50.png" gap:platform="ios" width="50" height="50" />
  <icon src="res/icons/icon-50@2x.png" gap:platform="ios" width="100" height="100" />

  <!-- iPhone and iPod touch -->
  <gap:splash src="res/screens/ios/Default.png" gap:platform="ios" width="320" height="480" />
  <gap:splash src="res/screens/ios/Default@2x.png" gap:platform="ios" width="640" height="960" />

  <!-- iPhone 5 / iPod Touch (5th Generation) -->
  <gap:splash src="res/screens/ios/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

  <author email="jereme@trailheadlabs.com" href="http://www.trailheadlabs.com">
    Trailhead Labs
  </author>

  <preference name="DisallowOverscroll" value="true" />

  <gap:platforms>
    <gap:platform name="ios" minVersion="3.2" />
  </gap:platforms>

  <gap:plugin name="org.apache.cordova.file"/>
  <gap:plugin name="org.apache.cordova.file-transfer"/>
  <gap:plugin name="org.apache.cordova.dialogs"/>
  <gap:plugin name="org.apache.cordova.geolocation"/>
  <gap:plugin name="org.apache.cordova.splashscreen" />

  <access origin="*" subdomains="true" />

  <feature name="Geolocation">
      <param name="ios-package" value="CDVLocation" />
  </feature>
</widget>
